#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

HOSTNAME=$(shell hostname)
ifeq ($(HOSTNAME),maat-swtpm)
OVERRIDE = dh_auto_configure -- --disable-selinux --enable-web-ui --enable-tpm PKG_CONFIG_PATH=/usr/local/lib/x86_64-linux-gnu/pkgconfig:/usr/local/lib/pkgconfig:/usr/local/share/pkgconfig:/usr/lib/x86_64-linux-gnu/pkgconfig:/usr/lib/pkgconfig:/usr/share/pkgconfig
else
OVERRIDE = dh_auto_configure -- --disable-selinux --enable-web-ui
endif

override_dh_auto_configure:
	$(OVERRIDE)

%:
	dh $@  --with autotools-dev

override_dh_fixperms:
	dh_fixperms --exclude apb --exclude asp

